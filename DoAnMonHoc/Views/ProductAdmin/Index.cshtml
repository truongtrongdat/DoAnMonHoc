<head>
	<style>
		.custom-button {
			background-color: #000080; /* Màu nền */
			border-color: #000080; /* Màu viền */
		}

			.custom-button:hover {
				background-color: #FF4500; /* Màu nền khi di chuột qua */
				border-color: #FA8072; /* Màu viền khi di chuột qua */
			}

			.custom-button:focus {
				box-shadow: 0 0 0 0.2rem rgba(0, 0, 0, 0.5); /* Hiệu ứng focus */
				outline: none; /* Loại bỏ viền focus */
			}

		.product-img .image-container {
			overflow: hidden;
			transition: transform 0.3s ease;
		}

			.product-img .image-container:hover {
				transform: scale(1.1);
			}

		.search-icon {
			color: #000080; /* Màu icon search */
			transition: color 0.3s ease; /* Hiệu ứng chuyển đổi màu */
		}

			.search-icon:hover {
				color: orange; /* Màu icon search khi di chuột vào */
				transform: scale(1.1); /* Hiệu ứng phóng to khi di chuột vào */
			}

		.btn {
			border-radius: 10px;
		}
	</style>

</head>
<body data-spy="scroll" data-target=".navbar" data-offset="51" style="background-color: #F0FFF0">
	<!-- Page Header Start -->
	<div class="container-fluid bg-secondary mb-5 d-flex justify-content-center align-items-center" style="min-height: 350px; position: relative;">
		<img src="~/img/shop/header_shop.jpg" alt="AZ Studio Shop Header Image" class="position-absolute top-0 left-0 w-100" style="max-height: 100%; object-fit: cover;" />
		<div class="d-flex flex-column align-items-center justify-content-center text-white" style="z-index: 1;">
			<h1 class="font-weight-semi-bold mb-3">AZ-Studio Shop Admin</h1>
		</div>
	</div>
	<!-- Page Header End -->
	<!-- Shop Start -->
	<div class="container-fluid pt-5">
		<div class="row px-xl-5 ">
			<!-- Shop Sidebar Start -->
			<div class="col-lg-3 col-md-12">
				<!--Thêm mới-->
				<form asp-action="AddNewProduct" asp-controller="ProductAdmin" method="get" class="custom-form">
					<button type="submit" class="btn btn-primary custom-button">Thêm mới sản phẩm</button>
				</form>
				<!---->
				@await Component.InvokeAsync("MenuShop")
			</div>
			<!-- Shop Sidebar End -->
			<!-- Shop Product Start -->
			<div class="col-lg-9 col-md-12">
				<div class="row pb-3">
					<div class="col-12 pb-1">
						<div class="d-flex align-items-end justify-content-end mb-3 ">
							@await Html.PartialAsync("_TimKiemSanPhamAdmin")
						</div>
					</div>
					@await Html.PartialAsync("_QuanLySanPhamAdmin")
					<div class="col-12 pb-1">
						<nav aria-label="Page navigation">
							<ul class="pagination justify-content-center mb-3">
								<li class="page-item disabled">
									<a class="page-link" href="#" aria-label="Previous">
										<span aria-hidden="true">&laquo;</span>
										<span class="sr-only">Previous</span>
									</a>
								</li>
								<li class="page-item active"><a class="page-link" href="#">1</a></li>
								<li class="page-item"><a class="page-link" href="#">2</a></li>
								<li class="page-item"><a class="page-link" href="#">3</a></li>
								<li class="page-item">
									<a class="page-link" href="#" aria-label="Next">
										<span aria-hidden="true">&raquo;</span>
										<span class="sr-only">Next</span>
									</a>
								</li>
							</ul>
						</nav>
					</div>
				</div>
			</div>
			<!-- Shop Product End -->
		</div>
	</div>
	<!-- Shop End -->
</body>


