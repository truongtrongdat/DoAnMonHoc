@model IEnumerable<DoAnMonHoc.ViewModel.SanPhamVM>

@foreach (var item in Model)
{
	<div class="col-lg-4 col-md-6 col-sm-12 pb-1">
		<div class="card product-item border-0 mb-4">
			<div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
				<div class ="image-container">
					<img class="img-fluid w-100" src="~/img/danhmuc/@item.Hinh" alt="@item.TenSanPham" style="max-height: 400px; object-fit: cover; transition: transform 0.3s ease;">
				</div>
			</div>
			<div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
				<h6 class="text-truncate mb-3">@item.TenSanPham</h6>
				<div class="d-flex justify-content-center">
					<h6>@item.DonGia VNĐ</h6><h6 class="text-muted ml-2"></h6>
				</div>
			</div>
			<div class="card-footer d-flex justify-content-between bg-light border">
				<a asp-action="UpdateProduct" asp-controller="ProductAdmin" asp-route-maSP="@item.MaSanPham" class="btn btn-sm text-dark p-0"><i class="fas fa-edit text-primary mr-1"></i>Chỉnh sửa</a>
				<a asp-action="DeleteProduct" asp-controller="ProductAdmin" asp-route-maSP="@item.MaSanPham" class="btn btn-sm text-danger p-0"><i class="fas fa-trash-alt text-danger mr-1"></i>Xóa</a>
			</div>
		</div>
	</div>
}
