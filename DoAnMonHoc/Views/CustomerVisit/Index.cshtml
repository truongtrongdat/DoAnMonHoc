@model IEnumerable<MessageCustomerVisit>

<div class="container-fluid bg-secondary mb-2 d-flex justify-content-center align-items-center" style="min-height: 200px; position: relative;">
    <img src="~/img/shop/header_shop.jpg" alt="AZ Studio Shop Header Image" class="position-absolute top-0 left-0 w-100" style="max-height: 100%; object-fit: cover;" />
    <div class="d-flex flex-column align-items-center justify-content-center text-white" style="z-index: 1;">
        <h1 class="font-weight-semi-bold mb-3">AZ-Studio Danh sách liên hệ của khách hàng</h1>
    </div>
</div>

@if (Model != null && Model.Count() > 0)
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                @foreach (var message in Model)
                {
                    <div class="message card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Tin nhắn từ @message.HoTen</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Email: @message.Email | Số điện thoại: @message.SoDienThoai</h6>
                            <p class="card-text">Nội dung: @message.TinNhan</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <p class="text-center">Không có tin nhắn nào được tìm thấy.</p>
            </div>
        </div>
    </div>
}