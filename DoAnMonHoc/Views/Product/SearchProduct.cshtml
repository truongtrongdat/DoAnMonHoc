@model IEnumerable<DoAnMonHoc.ViewModel.SanPhamVM>
@{
	ViewData["title"] = "Tìm kiếm";
}
@if (Model.Count() < 0)
{
	<h1> không tìm thấy sản phẩm cần tìm</h1>
}
else
{
	<h1 class="justify-content-center align-content-center " style="color:orange;"> Danh sách các sản phẩm tìm kiếm</h1>
}
<heade>
	<style>

		.product-img .image-container {
			overflow: hidden;
			transition: transform 0.3s ease;
		}

			.product-img .image-container:hover {
				transform: scale(1.1);
			}
	</style>
</heade>
<body data-spy="scroll" data-target=".navbar" data-offset="51">
	<div class="container-fluid pt-5">
		<div class="row px-xl-5 ">
			<div class="col-lg-9 col-md-12">
				<div class="row pb-3">
					@foreach (var item in Model)
					{
						<div class="col-lg-4 col-md-6 col-sm-12 pb-1">
							<div class="card product-item border-0 mb-4">
								<div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
									<div class="image-container">
										<img class="img-fluid w-100" src="~/img/danhmuc/@item.Hinh" alt="@item.TenSanPham" style="max-height: 400px; object-fit: cover; transition: transform 0.3s ease;">
									</div>
								</div>
								<div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
									<h6 class="text-truncate mb-3">@item.TenSanPham</h6>
									<div class="d-flex justify-content-center">
										<h6>@item.DonGia VNĐ</h6><h6 class="text-muted ml-2"><del>$123.00</del></h6>
									</div>
								</div>
								<div class="card-footer d-flex justify-content-between bg-light border">
									<a asp-action="Detail" asp-controller="Product" asp-route-maSP="@item.MaSanPham" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Xem chi tiết</a>
									<a asp-action="ThemVaoGioHang" asp-controller="Cart" asp-route-maSP="@item.MaSanPham" class="btn btn-sm text-dark p-0" name="soLuongMua"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</a>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</body>   