<heade>
    <style>

        .product-img .image-container {
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .product-img .image-container:hover {
                transform: scale(1.1);
            }
    </style>
</heade>
<body data-spy="scroll" data-target=".navbar" data-offset="51">
    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5 d-flex justify-content-center align-items-center" style="min-height: 350px; position: relative;">
        <img src="~/img/shop/header_shop.jpg" alt="AZ Studio Shop Header Image" class="position-absolute top-0 left-0 w-100" style="max-height: 100%; object-fit: cover;" />
        <div class="d-flex flex-column align-items-center justify-content-center text-white" style="z-index: 1;">
            <h1 class="font-weight-semi-bold mb-3">AZ-Studio Shop</h1>
            <div class="d-inline-flex">
                <p class="font-weight-semi-bold m-0"><a href="#" class="text-white">Home</a></p>
                <p class="m-0 px-2 text-white">-</p>
                <p class="font-weight-semi-bold m-0 text-white">Shop</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Shop Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5 ">
            <!-- Shop Sidebar Start -->
            <div class="col-lg-3 col-md-12">
                <!--Tìm kiếm-->
                @await Html.PartialAsync("_TimKiemSanPham")
                <!---->
                <!--Menu-->
                @await Component.InvokeAsync("MenuShop")
                <!---->
                <!-- Size Start -->
                @await Component.InvokeAsync("MenuSize")
                <!-- Size End -->
            </div>
            <!-- Shop Sidebar End -->

            <!-- Shop Product Start -->
            <div class="col-lg-9 col-md-12">
                <div class="row pb-3">
                    <div class="col-12 pb-1">
                        <div class="d-flex align-items-end justify-content-end mb-3 ">
                                @await Html.PartialAsync("_TimKiemSanPham")
                        </div>
                    </div>
                    @await Html.PartialAsync("_DanhSachSanPham")
                    <div class="col-12 pb-1">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mb-3">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Shop Product End -->
        </div>
    </div>
    <!-- Shop End -->
</body>


